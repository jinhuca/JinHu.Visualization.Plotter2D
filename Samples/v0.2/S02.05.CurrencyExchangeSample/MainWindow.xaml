<Window x:Class="S02.CurrencyExchangeSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:S02.CurrencyExchangeSample"
        xmlns:jin="http://jinhuca.visualization.com/Plotter2D/1.0"
        mc:Ignorable="d"
        Title="Currency Exchange" Height="450" Width="825" Loaded="Window_Loaded">
  <Grid>
    <jin:ChartPlotter x:Name="plotter">
      <jin:HorizontalAxis>
        <jin:HorizontalDateTimeAxis x:Name="dateAxis"/>
      </jin:HorizontalAxis>
      <jin:Header FontFamily="Georgia" Content="Currencies exchange rate"/>
      <jin:VerticalAxisTitle FontFamily="Georgia" Content="Currency price, in RUB"/>
      <jin:HorizontalAxisTitle FontFamily="Georgia" Content="Date"/>
    </jin:ChartPlotter>
  </Grid>
</Window>
