<Window x:Class="PlotterLayoutSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d3="http://jinhuca.visualization.com/Plotter2D/1.0"
        Title="MainWindow" Height="650" Width="825" Loaded="Window_Loaded">
  <d3:Plotter Name="plotter" Loaded="ChartPlotter_Loaded">
    
    <d3:Header Height="20" Content="Header Panel"/>
    <d3:HorizontalAxis Placement="Top" Background="LightBlue"/>
    <d3:VerticalAxis Placement="Right" Foreground="Red"/>
    <d3:HorizontalAxisTitle Placement="Bottom" Foreground="Red" Content="BottomPanel - HorizontalAxisTitle"/>
    <d3:HorizontalAxisTitle Placement="Top" Content="TopPanel - HorizontalAxisTitle"/>
    <d3:VerticalAxisTitle Placement="Left" Content="LeftPanel - VerticalAxisTitle"/>
    <d3:VerticalAxisTitle Placement="Right" Content="RightPanel - VerticalAxisTitle"/>
    <d3:Footer Height="40" Content="FooterPanel - Footer"/>
    <d3:Legend />
    <d3:VerticalAxis Placement="Right"></d3:VerticalAxis>
    <d3:VerticalAxis></d3:VerticalAxis>
    <!--<d3:CursorCoordinateGraph ></d3:CursorCoordinateGraph>-->
    <d3:AxisNavigation Placement="Bottom" ></d3:AxisNavigation>
  </d3:Plotter>
</Window>
